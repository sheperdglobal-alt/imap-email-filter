# IMAP Email Filter Configuration
# Copy this file to .env and fill in your actual values

# IMAP Server Settings
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
EMAIL_ADDRESS=your-email@example.com
EMAIL_PASSWORD=your-app-password

# Mailbox Folders
INBOX_FOLDER=INBOX
PROCESSED_FOLDER=INBOX/Processed
ERROR_FOLDER=INBOX/Errors

# Connection Settings
USE_SSL=True
TIMEOUT=30

# OCR Settings
TESS ERACT_PATH=/usr/bin/tesseract
TESSERACT_LANG=eng
OCR_DPI=300
IMAGE_FORMAT=PNG

# PDF Processing
MAX_PDF_SIZE_MB=50
EXTRACT_IMAGES=True

# Filter Settings
FILTER_RULES_FILE=filters/filter_rules.json
SEARCH_UNREAD_ONLY=True
SEARCH_SUBJECT_KEYWORDS=invoice,receipt,bill
MIN_ATTACHMENT_SIZE_KB=1

# Application Settings
OUTPUT_DIR=output
LOGS_DIR=logs
TEMP_DIR=temp
LOG_LEVEL=INFO
BATCH_SIZE=10
MAX_WORKERS=4

# Data Storage
SAVE_RAW_EMAILS=False
SAVE_EXTRACTED_TEXT=True
